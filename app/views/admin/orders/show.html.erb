<h3>Order # <%= @order.id %></h3>
<br>
<hr>
<h3>Customer Information:</h3>
  <ul>
    <li><%= @user.first_name %> <%= @user.last_name %></li>
    <li><%= @user.street_address %></li>
    <% if @user.unit_number %>
      <li><%= @user.unit_number %></li>
    <% end %>
    <li><%= @user.city %>, <%= @user.state %> <%= @user.zip_code %></li>
  </ul>
<br>
<hr>
<h3>Order Total: $<%= @order.total_price %> </h3>
<h3>Price Breakdown:</h3>
<ul>
    <% @order.course_orders.each do |course_order| %>
    <li>
       <%= "Customer purchased #{course_order.quantity} of #{course_order.course.title} for subtotal of $#{course_order.subtotal}"%>
    </li>
    <% end %>
</ul>
<h3>Order Status: <%= @order.status %></h3>
<h3>Order Date: <%= @order.created_at %></h3>

<h3>Courses Purchased: <%= @order.courses.count %></h3>
<table class="table">
  <th> Price </th>
  <th> Name </th>
  <th> Description</th>
  <% @order.courses.each do |course| %>
    <tr>
      <td> $<%= course.price %></td>
      <td> <%= link_to course.title, course_path(course) %></td>
      <td> <%= course.description %></td>
    </tr>
  <% end %>
</table>
