<body class="category-show-page">
  <div class="container">
    <header class="jumbotron hero-spacer">
      <h2>Search Results</h2>
    </header>

      <% if @categories.blank? %>
        <h4>There are no items containing the term <%= params[:search] %>.</h4>
        <% else %>
        <div class="row">
          <div class="col-md-3"></div>

          <div class="col-md-6">
            <% @categories.each do |category| %>
            <div class="list-group">
                <h2><%= link_to category.title, category.slug %></h2>
                 <% category.courses.map do |course| %>
                <h4>  <%=  link_to course.title, course_path(course), class: "list-group-item list-group-item-action" %></h4>
              <% end %>
            </div>
              <% end %>
            </div>
        <% end %>
        <div class="col-md-3"></div>
    </div>
</body>
