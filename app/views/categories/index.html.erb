<body class="category-show-page">
  <div class="container">
    <header class="jumbotron hero-spacer">
      <h2>Search Results</h2>
    </header>

    <% if @categories.blank? %>
      <h4>There are no items containing the term <%= params[:search] %>.</h4>
      <% else %>
      <div class="row">

      <div class="row text-center">
        <% @categories.each do |category| %>
          <h4><%= link_to category.title, category_path(category) %></h4>
           <% category.courses.map do |course| %>
          <p>  <%=  link_to course.title, course_path(course) %></p>
        <% end %>
      </div>
        <% end %>
    </div>
  <% end %>
</div>

</body>
