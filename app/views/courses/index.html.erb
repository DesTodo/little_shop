<body class="cart-page">

    <!-- Page Content -->
    <div class="container">

        <!-- Jumbotron Header -->
        <header class="jumbotron hero-spacer">
            <h2>Available Courses</h2>
            <p>review our selection of available online material</p>
        </header>

        <hr>

        <!-- Title -->
        <div class="row">
            <div class="col-lg-12 courses-header">

            </div>
            <hr class="header-rule">
        </div>
        <!-- /.row -->

        <!-- Page Features -->
      <div class="row text-center">

        <% @courses.each do |course| %>
        <div class="col-md-6 portfolio-item">
          <div class="thumbnail">
            <img src="<%= course.image %>" class="course-image">
              <div class="caption">
              <h3><%= course.title %></h3>
              <p class="description"><%= course.description.first(150) %></p>
              <%= button_to "Add to Cart", carts_path(course_id: course.id), class: "btn btn-primary" %>
              </div>
          </div>
        </div>
        <% end %>
      </div>
        <!-- /.row -->

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->
</body>

</html>
