<h1> <%= @course.title %> </h1>
  <%= image_tag @course.image %>
<div>
  <p><%= @course.description %><br>
     <strong><%= @course.price %></strong></p>

</div>
<% unless @course.inactive? %>
  <%= button_to "Add to Cart", carts_path(course_id: @course.id), class: "btn btn-default" %>
<% else %>
  <%= button_tag "Course Inactive", class: "btn btn-default disabled" %>
<% end %>
